{% extends 'base.html.twig' %}

{% block title %}Gite{% endblock %}

{% block body %}
    <h1>Gite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ gite.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ gite.name }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ gite.adress }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ gite.city }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ gite.zipcode }}</td>
            </tr>
            <tr>
                <th>Departement</th>
                <td>{{ gite.departement }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ gite.region }}</td>
            </tr>
            <tr>
                <th>Surface</th>
                <td>{{ gite.surface }}</td>
            </tr>
            <tr>
                <th>Rooms</th>
                <td>{{ gite.rooms }}</td>
            </tr>
            <tr>
                <th>Beds</th>
                <td>{{ gite.beds }}</td>
            </tr>
            <tr>
                <th>Animal_allowed</th>
                <td>{{ gite.animalAllowed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Animal_cost</th>
                <td>{{ gite.animalCost }}</td>
            </tr>
            <tr>
                <th>Disponibilities</th>
                <td>{{ gite.disponibilities }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ gite.description }}</td>
            </tr>
            <tr>
                <th>Green_price</th>
                <td>{{ gite.greenPrice }}</td>
            </tr>
            <tr>
                <th>Red_price</th>
                <td>{{ gite.redPrice }}</td>
            </tr>
            <tr>
                <th>Start_red</th>
                <td>{{ gite.startRed ? gite.startRed|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End_red</th>
                <td>{{ gite.endRed ? gite.endRed|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_gite_index') }}">back to list</a>

    <a href="{{ path('app_gite_edit', {'id': gite.id}) }}">edit</a>

    {{ include('gite/_delete_form.html.twig') }}
{% endblock %}
